{
  "name": "electron-main",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev:next": "cd front && next dev",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "main": "build/main.js",
  "build": {
    "asar": true,
    "executableName": "NextJSElectron",
    "appId": "com.electron-main",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp",
      "**\\*.{node,dll}"
    ],
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "tsup": "^8.5.0",
    "react": "^18",
    "react-dom": "^18",
    "next": "14.2.18"
  },
  "dependencies": {
    "@electron-toolkit/utils": "^4.0.0",
    "get-port-please": "^3.1.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.18"
  }
}
